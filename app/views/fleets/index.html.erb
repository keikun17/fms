<div class="container">
  <div class="container_header">
    <h3>Fleets</h3>
  </div>

  <div class="container_body">
    <div id="buttons_section">
      <%= link_to "Create new Fleet", new_fleet_path, :class => "button"  %>
    </div>
    <div style="clear:both">&nbsp;</div>    
    <table class="index">
      <tr class="yellow">
        <th>Fleet Name</th>
        <th>#Notes# / #Reminders# </th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @fleets.each do |fleet| %>
      <tr>
        <td><%= link_to fleet.name, fleet_vehicles_url(fleet)%></td>
        <td class="blink reminder"><%= fleet.reminders.count %></td>
        <td><%= link_to 'Statistics', fleet %></td>
        <td><%= link_to 'Edit', edit_fleet_path(fleet) %></td>
        <td><%= link_to 'Delete', fleet, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
      <% end %>
    </table>

    <br />
  </div>
</div>
